<?xml version="1.0" encoding="utf-8"?>
<!--
  Web.config file for Azure App Service / IIS
  This file removes server disclosure headers (Server, X-Powered-By, etc.)
  
  Place this file in the root directory of your application deployment
-->
<configuration>
  <system.webServer>
    <!-- Remove Server and X-Powered-By headers -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove Server header (IIS sets this) -->
        <remove name="Server" />
        <!-- Remove X-Powered-By header (ASP.NET/Express sets this) -->
        <remove name="X-Powered-By" />
        <!-- Remove X-AspNet-Version header if present -->
        <remove name="X-AspNet-Version" />
        <!-- Remove X-AspNetMvc-Version header if present -->
        <remove name="X-AspNetMvc-Version" />
      </customHeaders>
    </httpProtocol>
    
    <!-- URL Rewrite Module: Remove framework disclosure headers via outbound rules -->
    <!-- This is a more aggressive approach that works even if customHeaders doesn't -->
    <rewrite>
      <outboundRules>
        <!-- Remove Server header completely -->
        <rule name="Remove Server Header" enabled="true">
          <match serverVariable="RESPONSE_SERVER" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule>
        
        <!-- Remove X-Powered-By header (Express/ASP.NET) -->
        <rule name="Remove X-Powered-By Header" enabled="true">
          <match serverVariable="RESPONSE_X_Powered_By" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule>
        
        <!-- Remove X-AspNet-Version header -->
        <rule name="Remove X-AspNet-Version Header" enabled="true">
          <match serverVariable="RESPONSE_X_AspNet_Version" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule>
        
        <!-- Remove X-AspNetMvc-Version header -->
        <rule name="Remove X-AspNetMvc-Version Header" enabled="true">
          <match serverVariable="RESPONSE_X_AspNetMvc_Version" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule>
        
        <!-- Remove ETag header to prevent file inode disclosure -->
        <rule name="Remove ETag Header" enabled="true">
          <match serverVariable="RESPONSE_ETag" pattern=".*" />
          <action type="Rewrite" value="" />
        </rule>
      </outboundRules>
    </rewrite>
    
    <!-- Disable ETag generation in IIS static content -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
    </staticContent>
    
    <!-- Security Headers (additional protection) -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove ETag header (prevent file inode disclosure) -->
        <remove name="ETag" />
        
        <!-- Add security headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <!-- HTTP Strict Transport Security (HSTS) -->
        <!-- max-age: 1 year (31536000 seconds) -->
        <!-- includeSubDomains: Apply to all subdomains -->
        <!-- preload: Allow inclusion in HSTS preload list -->
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains; preload" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>

